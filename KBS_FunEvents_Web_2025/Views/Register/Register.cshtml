@model KBS_FunEvents_Web_2025.ViewModels.RegisterModelView

@{
    ViewData["Title"] = "Register";
}

<h1>Registrierung</h1>

<h4>Neues Benutzerkonto erstellen</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="kdNachname" class="control-label"></label>
                <input asp-for="kdNachname" class="form-control" />
                <span asp-validation-for="kdNachname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kdVorname" class="control-label"></label>
                <input asp-for="kdVorname" class="form-control" />
                <span asp-validation-for="kdVorname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kdStrasse" class="control-label"></label>
                <input asp-for="kdStrasse" class="form-control" />
                <span asp-validation-for="kdStrasse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kdHNummer" class="control-label"></label>
                <input asp-for="kdHNummer" class="form-control" />
                <span asp-validation-for="kdHNummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kdPLZ" class="control-label"></label>
                <input asp-for="kdPLZ" class="form-control" />
                <span asp-validation-for="kdPLZ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kdOrt" class="control-label"></label>
                <input asp-for="kdOrt" class="form-control" />
                <span asp-validation-for="kdOrt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kdTelefon" class="control-label"></label>
                <input asp-for="kdTelefon" class="form-control" />
                <span asp-validation-for="kdTelefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kdEmail" class="control-label"></label>
                <input asp-for="kdEmail" class="form-control" />
                <span asp-validation-for="kdEmail" class="text-danger"></span>
                @if(TempData["error"]!=null){
                       <p>Verwenden Sie diesen <a asp-controller="Login" asp-action="Index">Link</a> um zum Login zu gelangen.</p>
                }
            </div>
            <div class="form-group">
                <label asp-for="kdEmailRepeat" class="control-label"></label>
                <input asp-for="kdEmailRepeat" class="form-control" data-val-equalto-other="*.kdEmail" />
                <span asp-validation-for="kdEmailRepeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kdPwHash" class="control-label"></label>
                <input asp-for="kdPwHash" class="form-control" />
                <span asp-validation-for="kdPwHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kdPwHashRepeat" class="control-label"></label>
                <input asp-for="kdPwHashRepeat" class="form-control" />
                <span asp-validation-for="kdPwHashRepeat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrierung abschließen" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <p>Bereits ein Konto bei uns? Zum <a asp-controller="Login" asp-action="Index">Login</a></p>
            </div>
        </form>
    </div>
</div>
